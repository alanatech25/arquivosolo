// ================= EMBARALHAR =================
function embaralhar(array) {
  for (let i = array.length - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    [array[i], array[j]] = [array[j], array[i]];
  }
}

// ================= VARIÁVEIS =================
let indice = 0;
let acertos = 0;
let respondidas = {};
let tempo = 60 * 60;
let timer;

// ================= ELEMENTOS =================
const perguntaEl = document.getElementById("pergunta");
const contadorEl = document.getElementById("contador");
const explicacaoEl = document.getElementById("explicacao");
const timerEl = document.getElementById("timer");

// ================= FUNÇÕES =================
function mostrarPergunta() {
  if (!perguntas[indice]) return;

  perguntaEl.innerText = `${indice + 1}. ${perguntas[indice].pergunta}`;
  contadorEl.innerText = `Questão ${indice + 1} de ${perguntas.length}`;
  explicacaoEl.innerText = "";
}

function responder(resp) {
  if (respondidas[indice]) return;

  respondidas[indice] = true;

  if (resp === perguntas[indice].resposta) {
    acertos++;
    explicacaoEl.innerText = "✅ CERTO!";
  } else {
    explicacaoEl.innerText = `❌ EROOOUUU! ${perguntas[indice].explicacao}`;
  }

  if (indice === perguntas.length - 1) {
    finalizar();
  }
}

function finalizar() {
  clearInterval(timer);

  const percentual = Math.round((acertos / perguntas.length) * 100);
  const mensagem =
    percentual >= 90
      ? "Está no caminho certo!"
      : "Estude mais!";

  document.getElementById("resultadoFinal").innerHTML = `
    <strong>Acertos:</strong> ${acertos}<br>
    <strong>Percentual:</strong> ${percentual}%<br><br>
    ${mensagem}
  `;

  document.getElementById("modalFinal").style.display = "block";
}

function fecharModal() {
  document.getElementById("modalFinal").style.display = "none";
}

function iniciarTimer() {
  timer = setInterval(() => {
    const m = Math.floor(tempo / 60);
    const s = tempo % 60;
    timerEl.innerText = `Tempo restante: ${m}:${String(s).padStart(2,'0')}`;
    if (tempo <= 0) finalizar();
    tempo--;
  }, 1000);
}

// ================= EVENTOS =================
document.getElementById("btnCerto").onclick = () => responder("CERTO");
document.getElementById("btnErrado").onclick = () => responder("ERRADO");

document.getElementById("btnProx").onclick = () => {
  if (indice < perguntas.length - 1) {
    indice++;
    mostrarPergunta();
  }
};

document.getElementById("btnVoltar").onclick = () => {
  if (indice > 0) {
    indice--;
    mostrarPergunta();
  }
};

document.getElementById("btnParar").onclick = finalizar;

document.getElementById("btnReiniciar").onclick = () => {
  indice = 0;
  acertos = 0;
  respondidas = {};
  tempo = 60 * 60;
  clearInterval(timer);
  embaralhar(perguntas);
  mostrarPergunta();
  iniciarTimer();
};

// ================= INÍCIO =================
embaralhar(perguntas);
mostrarPergunta();
iniciarTimer();
</script>

</body>
</html>
