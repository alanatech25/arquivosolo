// ====== VARIÁVEIS DO JOGO ======
let indice = 0;
let tempoRestante = 60 * 60; // 60 minutos em segundos
let timerInterval;

// ====== ELEMENTOS ======
const perguntaEl = document.getElementById("pergunta");
const respostaEl = document.getElementById("resposta");
const btnCorreto = document.getElementById("btn-correto");
const btnErrado = document.getElementById("btn-errado");
const btnProx = document.getElementById("btn-prox");
const btnVoltar = document.getElementById("btn-voltar");
const btnReiniciar = document.getElementById("btn-reiniciar");
const timerEl = document.getElementById("timer");

// ====== FUNÇÕES ======
function mostrarPergunta() {
  respostaEl.innerHTML = "";
  const p = perguntas[indice];
  perguntaEl.innerText = `${indice + 1}. ${p.pergunta}`;
}

function verificarResposta(resposta) {
  const p = perguntas[indice];
  if(resposta === p.resposta){
    respostaEl.innerHTML = "✅ Correto!";
  } else {
    respostaEl.innerHTML = `❌ Errado! Explicação: ${p.explicacao}`;
  }
}

function proximaPergunta() {
  if(indice < perguntas.length - 1){
    indice++;
    mostrarPergunta();
  }
}

function perguntaAnterior() {
  if(indice > 0){
    indice--;
    mostrarPergunta();
  }
}

function reiniciarJogo() {
  indice = 0;
  tempoRestante = 60 * 60;
  mostrarPergunta();
  clearInterval(timerInterval);
  iniciarTimer();
}

function iniciarTimer() {
  timerInterval = setInterval(() => {
    const min = Math.floor(tempoRestante/60);
    const sec = tempoRestante % 60;
    timerEl.innerText = `Tempo restante: ${min.toString().padStart(2,'0')}:${sec.toString().padStart(2,'0')}`;
    if(tempoRestante <= 0){
      clearInterval(timerInterval);
      alert("Tempo esgotado!");
    } else {
      tempoRestante--;
    }
  },1000);
}

// ====== EVENTOS ======
btnCorreto.addEventListener("click", ()=>verificarResposta("Verdadeiro"));
btnErrado.addEventListener("click", ()=>verificarResposta("Falso"));
btnProx.addEventListener("click", proximaPergunta);
btnVoltar.addEventListener("click", perguntaAnterior);
btnReiniciar.addEventListener("click", reiniciarJogo);

// ====== INÍCIO DO JOGO ======
mostrarPergunta();
iniciarTimer();
</script>
</body>
